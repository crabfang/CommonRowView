<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/layout_custom_row_h_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/layout_custom_row_h_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_custom_row_h_icon"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/layout_custom_row_h_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#666666"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/layout_custom_row_h_head_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/row_view_point_red"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_custom_row_h_view_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_custom_row_h_view_title"
        android:layout_toLeftOf="@+id/layout_custom_row_h_view_option"
        android:gravity="center_vertical|right" >

        <TextView
            android:id="@+id/layout_custom_row_h_hint_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="#999999"
            tools:text="@string/app_name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_custom_row_h_view_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp" >

        <ImageView
            android:id="@+id/layout_custom_row_h_op_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>
    
    <View android:id="@+id/layout_custom_row_view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="#EEEEEE" />

</RelativeLayout>